@model Ecoporto.CRM.Site.Models.OportunidadesAdendosViewModel

<div class="form-row">
    <div class="form-group col-md-12">
        @Html.LabelFor(model => model.AnexoExclusaoGrupoCNPJ)
        @Html.EditorFor(model => model.AnexoExclusaoGrupoCNPJ, new { htmlAttributes = new { @class = "form-control form-control-sm", type = "file" } })
    </div>
    <div class="form-group col-md-2 offset-md-10">
        <label>&nbsp;</label>
        @if (User.IsInRole("Administrador") || (User.IsInRole("OportunidadesAdendos:Cadastrar") || User.IsInRole("OportunidadesAdendos:Atualizar")))
        {
            <button id="btnAdendoExclusaoGrupoCnpj" type="submit" class="btn btn-primary btn-sm btn-block btn-as-block">Salvar</button>
        }
        </div>
</div>

