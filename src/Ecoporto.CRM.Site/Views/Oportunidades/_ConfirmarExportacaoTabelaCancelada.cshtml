@model Ecoporto.CRM.Site.Models.OportunidadesInformacoesIniciaisViewModel
<div data-id="0" class="modal" tabindex="-1" role="dialog" id="confirmar-cancelamento-tabela-modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Exportação Tabela</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Confirma o Cancelamento da Tabela para o Sistema Chronos?</p>
                @if (Model.DataCancelamentoOportunidade.HasValue)
                {
                    <p>Data Cancelamento: @Model.DataCancelamentoOportunidade.Value.ToString("dd/MM/yyyy")</p>
                }
            </div>
            <div class="modal-footer">
                <button id="btnConfirmarExportacaoTabelaCancelada" type="button" class="btn btn-danger" onclick="confirmarExportacaoTabelaCancelada()">Estou ciente e confirmo o Cancelamento</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>