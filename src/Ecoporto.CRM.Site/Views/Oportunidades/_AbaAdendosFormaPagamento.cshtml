@model Ecoporto.CRM.Site.Models.OportunidadesAdendosViewModel

<br />

<div class="form-row">
    <div class="form-group col-md-12">
        <label>Selecione uma Forma de Pagamento:</label>
        @Html.EnumDropDownListFor(c => c.AdendoFormaPagamento, new { @class = "form-control form-control-sm" })
    </div>   
</div>

<div class="form-row">
    <div class="form-group col-md-10">
        @Html.LabelFor(model => model.AnexoFormaPagamento)
        @Html.EditorFor(model => model.AnexoFormaPagamento, new { htmlAttributes = new { @class = "form-control form-control-sm", type = "file" } })
    </div>
    <div class="form-group col-md-2">
        <label>&nbsp;</label>
        @if (User.IsInRole("Administrador") || (User.IsInRole("OportunidadesAdendos:Cadastrar") || User.IsInRole("OportunidadesAdendos:Atualizar")))
        {
            <button id="btnSalvarAdendoFormaPgto" type="submit" class="btn btn-primary btn-sm btn-block btn-as-block">Salvar</button>
        }
        </div>
</div>