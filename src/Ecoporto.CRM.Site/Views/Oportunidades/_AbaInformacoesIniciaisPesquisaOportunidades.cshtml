<div class="modal" tabindex="-1" role="dialog" id="pesquisa-modal-oportunidades">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Pesquisar Oportunidades</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Selecione a Oportunidade para revisão:</p>

                @using (Ajax.BeginForm("ConsultarPorDescricao", "Oportunidades", null, new AjaxOptions
                {
                    UpdateTargetId = "ListaOportunidades",
                    InsertionMode = InsertionMode.Replace,
                    LoadingElementId = "ListaOportunidadesLoader",
                    HttpMethod = "GET"
                }, new { id = "frmPesquisaOportunidades" }))
                {

                    <div class="form-group row">
                        <div class="col-md-10">
                            <input type="text" class="form-control" id="descricao" name="descricao" placeholder="Descrição...">
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-outline-primary">Pesquisar</button>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <div id="ListaOportunidadesLoader" class="text-center progresso">
                                <img src="@Url.Content("~/Content/img/loading.gif")" />
                            </div>
                            <div id="ListaOportunidades">
                            </div>
                        </div>
                    </div>
                }

            </div>
            <div class="modal-footer">

            </div>
        </div>
    </div>
</div>