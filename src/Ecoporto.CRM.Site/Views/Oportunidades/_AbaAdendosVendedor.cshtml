@model Ecoporto.CRM.Site.Models.OportunidadesAdendosViewModel

<br />

<div class="form-row">
    <div class="form-group col-md-10">
        <label>Selecione o Vendedor para alteração:</label>
        @Html.DropDownListFor(c => c.AdendoVendedorId, new MultiSelectList(Model.Vendedores, "Id", "Nome"), string.Empty, new { @class = "form-control form-control-sm" })
    </div>
    <div class="form-group col-md-2">
        <label>&nbsp;</label>
        @if (User.IsInRole("Administrador") || (User.IsInRole("OportunidadesAdendos:Cadastrar") || User.IsInRole("OportunidadesAdendos:Atualizar")))
        {
            <button type="submit" class="btn btn-primary btn-sm btn-block btn-as-block" data-animation-name="spinner">Salvar</button>
        }
    </div>
</div>
