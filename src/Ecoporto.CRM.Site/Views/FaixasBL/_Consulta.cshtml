@model IEnumerable<Ecoporto.CRM.Business.Models.FaixaBL>

<div class="table-responsive">
    <table class="table table-sm" cellspacing="0">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">BL Mínimo</th>
                <th scope="col">BL Máximo</th>
                <th scope="col">Valor Mínimo</th>
                <th class="campo-acao">&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@String.Format("{0:N2}", item.BLMinimo)</td>
                    <td>@String.Format("{0:N2}", item.BLMaximo)</td>
                    <td>@String.Format("{0:N2}", item.ValorMinimo)</td>
                    <td><a href="#" onclick="excluirFaixaBL(@item.Id)" class="btn btn-danger btn-sm btn-acao"><i class="fa fa-trash"></i>&nbsp;Excluir</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>




