@using ReportViewerForMvc;
@{
    ViewBag.Title = "ReportEmployee";
}

@Html.ReportViewer(ViewBag.ReportViewer as Microsoft.Reporting.WebForms.ReportViewer)

@section Scripts{

    <script>

        $(".footer").hide();

        if (ReportViewerForMvc) {

            var frameId = ReportViewerForMvc.getIframeId();
            
            setTimeout(function () {

                var reportViewer = $(ReportViewerForMvc.getIframeId()).contents().find("#ReportViewer1").width('100%');
                var reportViewerTable = $(frameId).contents().find("#ReportViewer1_fixedTable");

                if (reportViewerTable) {
                    if (reportViewerTable.length > 0) {
                        $(frameId).contents().find("#ReportViewer1_fixedTable").width('100%');
                        reportViewer.height('100%');
                    }
                }
                
            }, 6000);            
        }

    </script>
}