@model Ecoporto.CRM.Site.Models.ModeloViewModel

@{
    ViewBag.Title = "Cadastrar Modelo";
}

<section class="content-header">
    <h1>
        Gerenciamento de Modelos
        <small>Proposta</small>
    </h1>
    <ol class="breadcrumb">
        <li>
            <a href="#">
                <i class="fa fa-home"></i>Home
            </a>
        </li>
        <li>
            <a href="#">Modelos</a>
        </li>
        <li class="active">Cadastro de Modelos</li>
    </ol>
</section>

<div class="row">
    <div class="col-md-12">

        @using (Html.BeginForm())
        {
            

            <div class="card">
                <div class="card-header">
                    <i class="fa fa-edit fa-lg"></i>
                    Importar Modelo (replicar)
                    <div class="float-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">

                    @if (ViewContext.ViewData.ModelState.IsValid && Convert.ToBoolean(TempData["Sucesso"]))
                    {
                        <div id="msgSucesso" class="alert alert-success" role="alert">Modelo importado com sucesso!</div>
                    }
                    else
                    {
                        @Html.ValidationSummary(false, null, new { @class = "text-danger" })
                    }

                        <div class="row">

                            <div class="form-group col-md-12">
                                <label>Selecione o Modelo:</label>
                                @Html.DropDownList("Id", new SelectList(ViewBag.Modelos, "Id", "Descricao"), new { @class = "form-control form-control-sm" })
                            </div>

                            <div class="form-group col-md-12">
                                @Html.LabelFor(model => model.Descricao):
                                @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control form-control-sm", placeholder = "Descrição do modelo" } })
                            </div>

                        </div>

                </div>

                <div class="card-footer">
                    <div class="float-left">
                        <p>
                            <a href="@Url.Action("Index", "Modelos")" class="btn btn-secondary btn-sm">Retornar</a>
                        </p>
                    </div>
                    <div class="float-right">
                        <p>
                            <button type="submit" class="btn btn-primary btn-sm">Importar</button>
                        </p>
                    </div>
                </div>

            </div>

        }
    </div>

</div>