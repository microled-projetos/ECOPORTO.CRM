@model Ecoporto.CRM.Site.Models.ContaViewModel

<div id="abaContatos" style="height:350px;" class="pre-scrollable">

    <div class="table-responsive">
        <table id="tbContatos" class="table table-hover table-sm" cellspacing="0">
            <thead>
                <tr>
                    <th scope="col">Nome</th>
                    <th scope="col">Sobrenome</th>
                    <th scope="col">Telefone</th>
                    <th scope="col">Celular</th>
                    <th scope="col">Cargo</th>
                    <th scope="col">Departamento</th>
                    <th scope="col">Nasc.</th>
                    <th scope="col">Email</th>
                    <th scope="col">Status</th>

                    <th colspan="2">
                        <a id="btnCadastrarContato" href="#" class="btn btn-primary btn-sm btn-block btn-as-block"><i class="fa fa-edit"></i>&nbsp;Cadastrar Contato</a>
                        @*<a href="@Url.Action("Cadastrar", "Contatos", new { conta = Model.Id })" target="_blank" class="btn btn-primary btn-sm btn-block btn-as-block"><i class="fa fa-edit"></i>&nbsp;Cadastrar Contato</a>*@
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Contatos)
                {
                    <tr id="item-contato-@item.Id">
                        <td>@item.Nome</td>
                        <td>@item.Sobrenome</td>
                        <td>@item.Telefone</td>
                        <td>@item.Celular</td>
                        <td>@item.Cargo</td>
                        <td>@item.Departamento</td>
                        <td>@(item.DataNascimento != null ? item.DataNascimento.Value.ToString("dd/MM/yyyy") : "") </td>
                        <td>@item.Email</td>

                        @if (item.Status == Ecoporto.CRM.Business.Enums.Status.ATIVO)
                        {
                            <td>
                                <span class="badge badge-success">Ativo</span>
                            </td>
                        }
                        else
                        {
                            <td>
                                <span class="badge badge-danger">Inativo</span>
                            </td>
                        }

                        <td class="campo-acao">
                            <a href="~/Contatos/Atualizar/@item.Id?conta=@item.ContaId" target="_blank" class="btn btn-info btn-sm btn-acao"><i class="fa fa-edit"></i></a>
                        </td>

                        <td class="campo-acao">
                            <a href="#" onclick="excluirContato(@item.Id, @item.ContaId)" class="btn btn-danger btn-sm btn-acao"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
