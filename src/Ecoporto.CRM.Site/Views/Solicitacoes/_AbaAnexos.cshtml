@model Ecoporto.CRM.Site.Models.SolicitacaoComercialAnexosViewModel

<br />

@using (Ajax.BeginForm("CadastrarAnexos", "Solicitacoes", new AjaxOptions
{
    UpdateTargetId = "ListaAnexos",
    InsertionMode = InsertionMode.Replace,
    HttpMethod = "POST"
}, new { id = "frmSolicitacoesAnexos", enctype = "multipart/form-data" }))
{
    

    @Html.HiddenFor(model => model.AnexoSolicitacaoId)

    <div class="form-row">
        <div class="form-group col-md-12">
            @Html.LabelFor(model => model.SolicitacaoAnexo)
            @Html.EditorFor(model => model.SolicitacaoAnexo, new { htmlAttributes = new { @class = "form-control form-control-sm", type = "file" } })
        </div>
    </div>

    <div class="form-row">

        <div class="form-group col-md-1 offset-md-10">
            <button id="btnAnexosAnterior" type="button" class="btn btn-info btn-sm btn-block btn-as-block">Anterior</button>
        </div>

        <div class="form-group col-md-1">
            <button id="btnAnexar" type="submit" class="btn btn-primary btn-sm btn-block btn-as-block">Salvar</button>
        </div>

    </div>

    <div class="form-row">
        <div class="col-md-12">
            <div id="ListaAnexos">
                @Html.Partial("_AbaAnexosConsulta", Model.Anexos)
            </div>
        </div>
    </div>
}
