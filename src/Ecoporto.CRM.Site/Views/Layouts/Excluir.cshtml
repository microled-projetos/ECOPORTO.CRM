@model Ecoporto.CRM.Site.Models.LayoutViewModel

@{
    ViewBag.Title = "Excluir Linha";
}

<section class="content-header">
    <h1>
        Gerenciamento de Layouts
        <small>Proposta</small>
    </h1>
    <ol class="breadcrumb">
        <li>
            <a href="#">
                <i class="fa fa-home"></i>Home
            </a>
        </li>
        <li>
            <a href="#">Layouts</a>
        </li>
        <li class="active">Excluir Linha</li>
    </ol>
</section>

<div class="row">
    <div class="col-md-12">

        @using (Html.BeginForm())
        {
            

            <div class="card">
                <div class="card-header">
                    <i class="fa fa-trash fa-lg"></i>
                    Confirma a exclusão do Layout?
                    <div class="float-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">

                    @if (ViewContext.ViewData.ModelState.IsValid && Convert.ToBoolean(TempData["Sucesso"]))
                    {
                        <div id="msgSucesso" class="alert alert-success" role="alert">Linha excluida com sucesso!</div>
                    }
                    else
                    {
                        @Html.ValidationSummary(false, null, new { @class = "text-danger" })
                    }

                    @Html.HiddenFor(model => model.Id)

                    <div class="form-group row">
                        @Html.LabelFor(model => model.Linha, new { @class = "col-sm-2 col-form-label text-right" })
                        <div class="col-sm-1">
                            @Html.EditorFor(model => model.Linha, new { htmlAttributes = new { @class = "form-control-plaintext", disabled = "disabled" } })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(model => model.TipoRegistro, new { @class = "col-sm-2 col-form-label text-right" })
                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.TipoRegistro, new { htmlAttributes = new { @class = "form-control-plaintext", disabled = "disabled" } })
                        </div>
                    </div>                    
                    <div class="form-group row">
                        @Html.LabelFor(model => model.Descricao, new { @class = "col-sm-2 col-form-label text-right" })
                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control-plaintext", disabled = "disabled" } })
                        </div>
                    </div>
                </div>

                <div class="card-footer">
                    <div class="float-left">
                        <p>
                            <a href="#" id="close-window" class="btn btn-secondary btn-sm">Fechar</a>
                        </p>
                    </div>
                    <div class="float-right">
                        <p>
                            <button type="submit" class="btn btn-danger btn-sm">Estou ciente e confirmo a exclusão da Linha</button>
                        </p>
                    </div>
                </div>

            </div>

        }
    </div>

</div>

@section Scripts{

    <script>
        document.getElementById("close-window").addEventListener("click", function () {
            window.close();
        });
    </script>
}