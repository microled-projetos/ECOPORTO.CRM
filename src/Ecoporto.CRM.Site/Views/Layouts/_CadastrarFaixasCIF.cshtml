@model Ecoporto.CRM.Site.Models.FaixasCIFViewModel

<div class="modal" tabindex="-1" role="dialog" id="faixas-cif-modal">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Cadastrar Faixas CIF</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            @using (Ajax.BeginForm("Cadastrar", "FaixasCIF", null, new AjaxOptions
            {
                UpdateTargetId = "ListaFaixasCIF",
                OnSuccess = "faixaCIFCadastrada",
                OnFailure = "faixaCIFComErros",
                InsertionMode = InsertionMode.Replace,
                HttpMethod = "POST"
            }, new { id = "frmCadastrarFaixasCIF" }))
            {
                <div class="modal-body">

                    @Html.HiddenFor(model => model.FaixaCIFLayoutId)

                    <div class="form-row">

                        <div class="form-group col-sm-1">
                            @Html.LabelFor(model => model.FaixasCIFMinimo)
                            @Html.EditorFor(model => model.FaixasCIFMinimo, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                        </div>

                        <div class="form-group col-sm-1">
                            @Html.LabelFor(model => model.FaixasCIFMaximo)
                            @Html.EditorFor(model => model.FaixasCIFMaximo, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                        </div>

                        <div class="form-group col-sm-2">
                            @Html.LabelFor(model => model.FaixasCIFMargem)
                            @Html.EnumDropDownListFor(c => c.FaixasCIFMargem, new { @class = "form-control form-control-sm" })
                        </div>

                        <div class="form-group col-sm-1">
                            @Html.LabelFor(model => model.FaixasCIFValor20)
                            @Html.EditorFor(model => model.FaixasCIFValor20, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                        </div>

                        <div class="form-group col-sm-1">
                            @Html.LabelFor(model => model.FaixasCIFValor40)
                            @Html.EditorFor(model => model.FaixasCIFValor40, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                        </div>

                        <div class="form-group col-sm-6">
                            @Html.LabelFor(model => model.FaixasCIFDescricao)
                            @Html.EditorFor(model => model.FaixasCIFDescricao, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                        </div>

                    </div>

                    <div class="form-row">
                        <div class="form-group col-sm-12">
                            <div id="ListaFaixasCIF" style="height:200px;" class="pre-scrollable"></div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <div class="float-right">
                        <p>
                            <button type="submit" class="btn btn-outline-primary">Salvar</button>
                        </p>
                    </div>
                </div>

            }
        </div>

    </div>
</div>