        </div>

        <div class="form-group col-md-1">
            @Html.LabelFor(model => model.BaseCalculoServLib)
            @Html.PrivilegedEnumDropDownListFor(c => c.BaseCalculoServLib, "form-control form-control-sm")
        </div>

        <div class="form-group col-sm-1" id="pnlServLibCntr20">
            @Html.LabelFor(model => model.Valor20ServLib)
