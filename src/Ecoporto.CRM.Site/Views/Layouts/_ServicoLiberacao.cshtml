            @Html.PrivilegedDropDownListFor(model => model.GrupoAtracacaoServLiv, new MultiSelectList(Model.GruposAtracacao, "Id", "Descricao"), "form-control form-control-sm")
        </div>

        <div class="form-group col-sm-5">
            @Html.LabelFor(model => model.TipoDocumentoServLib)
            @Html.PrivilegedDropDownListFor(model => model.TipoDocumentoServLib, new MultiSelectList(Model.TiposDocumentos, "Id", "Descricao"), "form-control form-control-sm")
