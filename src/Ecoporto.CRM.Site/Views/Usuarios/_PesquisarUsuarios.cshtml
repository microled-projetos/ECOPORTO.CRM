<div class="modal" tabindex="-1" role="dialog" id="pesquisa-modal-usuarios">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Pesquisar Usuários</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Digite abaixo o nome (ou parte) do Usuário que deseja buscar:</p>

                @using (Ajax.BeginForm("ConsultarUsuariosPorNome", "Usuarios", null, new AjaxOptions
                {
                    UpdateTargetId = "ListaUsuarios",
                    InsertionMode = InsertionMode.Replace,
                    OnSuccess = "listaUsuariosSucesso",
                    LoadingElementId = "ListaUsuariosLoader",
                    HttpMethod = "GET"
                }, new { id = "frmPesquisaUsuarios" }))
                {

                    <div class="form-group row">
                        <div class="col-md-3">
                            <select id="dominio" name="dominio" class="form-control">
                                <option value="Ecoporto">Ecoporto</option>
                                <option value="Ecopatio">Ecopátio</option>
                                <option value="Ecorodovias">Ecorodovias</option>
                            </select>
                        </div>
                        <div class="col-md-7">
                            <input type="text" class="form-control" id="nome" name="nome" placeholder="Nome...">
                        </div>
                        <div class="col-md-2">
                            <button id="btnPesquisarUsuariosDominio" type="submit" class="btn btn-outline-primary btn-block btn-as-block">Pesquisar</button>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <div id="ListaUsuariosLoader" class="text-center progresso">
                                <img src="@Url.Content("~/Content/img/loading.gif")" />
                            </div>
                            <div id="ListaUsuarios">
                            </div>
                        </div>
                    </div>
                }

            </div>
            <div class="modal-footer">

            </div>
        </div>
    </div>
</div>